{
  "name": "spritejs",
  "version": "1.18.3",
  "description": "A lightweight 2D canvas rendering engine for modern browsers with ES6+.",
  "main": "lib/index.js",
  "directories": {
    "example": "example"
  },
  "browser": {
    "./src/platform": "./src/platform/browser",
    "sprite-core": "./node_modules/sprite-core/dist/sprite-core.module"
  },
  "scripts": {
    "test": "nyc ava",
    "lint": "eslint 'src/**/*.js' --fix",
    "start": "webpack-dev-server -d --quiet --port 9090 & http-server example -c-1 -p 9091",
    "benchmark": "webpack-dev-server -d --quiet --port 9090 & http-server benchmark -c-1 -p 9091",
    "build": "rm -rf dist/* && ./script/build.js",
    "compile": "rm -rf lib/* && babel src -d lib --watch",
    "doc": "webpack-dev-server -d --quiet --port 9090 & babel docs/src -d docs/js --watch & http-server docs -c-1 -p 9091",
    "precommit": "./script/precommit.js",
    "prepublishOnly": "npm run precommit && rm -rf lib/* && babel src -d lib && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spritejs/spritejs"
  },
  "keywords": [
    "sprite",
    "canvas",
    "graphic",
    "graphics",
    "SVG",
    "Path",
    "d3",
    "node-canvas",
    "parser",
    "HTML5",
    "object model"
  ],
  "author": "akira-cn",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.16.2",
    "babel-decorators-runtime": "^0.2.0",
    "babel-runtime": "^6.26.0",
    "sprite-core": "^1.16.8"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^8.1.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-inline-package-json": "^2.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-runtime": "^0.4.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.3.2",
    "colors": "^1.2.1",
    "coveralls": "^2.13.1",
    "d3": "^4.13.0",
    "eslint": "^4.17.0",
    "eslint-config-75team": "^1.0.2",
    "gifencoder": "^1.1.0",
    "hamming-distance": "^1.0.0",
    "http-server": "^0.9.0",
    "imghash": "0.0.3",
    "nyc": "^11.1.0",
    "pixelmatch": "^4.0.2",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.2"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/animation.js",
      "src/cross-platform/**/*.js"
    ]
  }
}
